<h1 class="subscriptioncard-header">Subscription</h1>
<div class="subscription-container">
    
    
        <div class="form-row">
            
            <div class="form-group col-md-4">
                <label for="first-name">Customer ID</label>
                <input type="text" class="form-control" id="customerid" name="customerid" required>
            </div>
        
        
            <div class="form-group col-md-4">
                <label for="last-name">Product ID</label>
                <input type="text" class="form-control" id="productid" name="productid" required>
            </div>
            <div class="form-group col-md-4">
                <label for="startDate">Start Date:</label>
                <input type="date" class="form-control" id="startdate" name="startdate" required>
            </div>

        
            <div class="form-group col-md-4">
                <label for="endDate">End Date:</label>
                <input type="date" class="form-control" id="enddate" name="enddate" required>
            </div>
            <div class="form-group col-md-4">
                <label for="status">Status</label>
                <select class="form-control selectpicker" id="status" name="status" required>
                    <option hidden value="Select" style="color: gray;" >Select</option>
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                    
                    <!-- Add more payment methods as needed -->
                </select>
            </div>
            <div class="form-group col-md-4">
                <label for="recurringamount">Recurring Amount:</label>
                <input type="text" class="form-control" id="recurringamount" name="recurringamount" required>
            </div>  
            <div class="form-group col-md-4">
                <label for="billinginterval">Billing Interval</label>
                <input type="text" class="form-control" id="billinginterval" name="billinginterval" required>
            </div>
            <div class="form-group col-md-4">
                <label for="trialstartdate">Trial Start Date:</label>
                <input type="date" class="form-control" id="trialstartdate" name="trialstartdate" required>
            </div>
            <div class="form-group col-md-4">
                <label for="trialenddate">Trial Start Date:</label>
                <input type="date" class="form-control" id="trialenddate" name="trialenddate" required>
            </div>
        
            
        </div>    
  <button type="submit" id="add">Add Customer &nbsp;<i class='bx bx-message-square-add'></i></button>      
    
</div>
&nbsp;
<div class="subscription-container"> 
    <table id="subscription-table" class=" table mt-4 ">
      
        <thead class="">
          <th scope="col-md-4">Subscription ID</th>
          <th scope="col-md-4">Customer ID</th>
          <th scope="col-md-4">Product ID</th>
          <th scope="col-md-4">Start Date</th>
          <th scope="col-md-4">End Date</th>
          <th scope="col-md-4">Status</th>
          <th scope="col-md-4">Recurring Amount</th>
          <th scope="col-md-4">Billing Interval</th>
          <th scope="col-md-4">Trial Start Date</th>
          <th scope="col-md-4">Trial End Date</th>
          <th>action</th>
        </thead>
      
        <tbody>

        </tbody>
        <!-- More payment rows can be added here -->
      
    </table>
</div>